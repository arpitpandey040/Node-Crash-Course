<html lang="en">
  <%-include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">

      <% if (blogs.length > 0) { %> 
        <h1>All Blogs</h1>
        <% blogs.forEach(blog =>{ %>
          <a class="single" href="/blogs/<%= blog._id%>" class="single">
            <h3 class="blogs content"><%=blog.title %></h3>
            <p class="snippet"><%=blog.snippet %></p>
          </a>
        <%})%>

      <!-- <h3><%= blogs.title %></h3> -->
        <% }
         else{ %>
          <p>There is no blogs to display</p>
        <%} %>
    </div>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
